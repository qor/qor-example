{{with .Result}}
  <div class="container">
    <div class="row">
      Order Page
    </div>
    <div class="row">
      <div class="column column-6">
        <label>Billing Address</label>
        <select name="address">
          {{range .Addresses}}
            <option value={{.ID}}>{{.Address2}} {{.Address1}} {{.City}}</option>
          {{end}}
        </select>
      </div>
      <div class="column column-6">
        <label>Shipping Address</label>
        <select name="address">
          {{range .Addresses}}
          <option value={{.ID}}>{{.Address2}} {{.Address1}} {{.City}}</option>
          {{end}}
        </select>
      </div>
    </div>
  </div>
{{end}}
