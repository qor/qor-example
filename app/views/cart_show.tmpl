{{with .Result}}
  <div class="container">
    <div class="row">
      Cart Page
    </div>
    <div class="row">
      <div class="column">
        <ul>
          {{range .showCartItems}}
            <li>
              <img src="{{.MainImageURL}}" width="100">

              <div>
                <span>{{.SizeVariation.ColorVariation.Product.Name}}</span>
                <span>{{.SizeVariation.ColorVariation.Color.Name}}</span>
              </div>
              <div>
                <span>{{.SizeVariation.ColorVariation.Product.Price}}</span>
                <span>*</span>
                <span>{{.Quantity}}</span>
                <span>=</span>
                <span>{{.Amount}}</span>
              </div>
            </li>
          {{end}}
        </ul>
        <div>
          Payment Amount: {{.cartAmount}}
        </div>
      </div>
    </div>
  </div>
{{end}}
